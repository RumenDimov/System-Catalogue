@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<br />
<h2 class="text-center">System Asset Registry</h2>

<hl></hl>

<div class="container p-3">
    @if (Model.SystemAssets.Count() > 0)
    {


    <table class="table table-hover">
        <thead>
            <tr>
                
                <th>
                    <label asp-for="SystemAssets.FirstOrDefault().Name"></label>
                </th>
                <th>
                    <label asp-for="SystemAssets.FirstOrDefault().Website"></label>
                </th>
                <th>
                    <label asp-for="SystemAssets.FirstOrDefault().Wiki"></label>
                </th>
                <th>
                    <label asp-for="SystemAssets.FirstOrDefault().LastDeployed"></label>
                </th>
                <th>
                    <label>Server Name</label>
                </th>
               
                <th>

                </th>
            </tr>
        </thead>
        @foreach (var item in Model.SystemAssets)
        {
    <tr>
        
        <td>
            @Html.DisplayFor(e => item.Name)
        </td>
        <td>
            @Html.DisplayFor(e => item.Website)
        </td>
        <td>
            @Html.DisplayFor(e => item.Wiki)
        </td>

        <td>
            @Html.DisplayFor(e => item.LastDeployed)
        </td>
            
        <td>
            @Html.DisplayFor(e => item.ServerAssets.ServerName)
        </td>
        <td>
            <a class="btn btn-danger btn-sm" asp-page="AppPages/Delete" asp-route-id="@item.Id">Delete</a>
            <a asp-page="AppPages/Update" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">Update</a>
        </td>
    </tr>
        }
    </table>
    }
    else
    {
        <p>No data available</p>
    }
</div>

<br />
<div class="container-fluid">
    

<div class="col-12 border p-3">

    <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th hidden>Id</th>
                <th>Name</th>
                <th>Website</th>
                <th>Wiki</th>
                <th>Last Deployed</th>
                <th>Server Name</th>
                <th></th>
                
            </tr>
        </thead>
    </table>
</div>

    </div>

@section Scripts {
    <script src="~/js/systemList.js"></script>
}
