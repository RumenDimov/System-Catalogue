@page
@model ServiceCatalogue.Pages.AppPages.Admin.UpdateAdminModel
@{
}

<br />

<h2 class="text-info">Update the server</h2>

<br />

<div class="border container" style="padding: 30px;">
    <form method="post">
        <input type="hidden" asp-for="ServerAsset.Id" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label>Name</label>
            </div>
            <div class="col-6">
                <input asp-for="ServerAsset.ServerName" class="form-control" />
            </div>
            
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label>Active</label>
            </div>
            <div class="col-6">
                <input type="checkbox" asp-for="ServerAsset.Active" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label>Role</label>
            </div>
            <div class="col-6">
                <select asp-for="ServerAsset.AppsId" class="form-control" asp-items="@Model.AppList">
                    <option value="">-- Select Server --</option>
                </select>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="../AdminIndex" class="btn btn-success form-control">Back to list</a>
            </div>
        </div>

    </form>
</div>