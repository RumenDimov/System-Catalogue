@page
@model ServiceCatalogue.Pages.AppPages.AdminModel
@{
}

<br />

<h2 class="text-info">Create System</h2>

<br />

<div class="border container" style="padding: 30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label>Server Name</label>
            </div>
            <div class="col-6">
                <input asp-for="ServerAsset.ServerName" class="form-control" />
            </div>
            <span asp-validation-for="ServerAsset.ServerName" class="text-danger"></span>
        </div>


        <div class="form-group row">
            <div class="col-4">
                <label>Active</label>
            </div>
            <div class="col-6">
                <!--
    <select asp-for="ServerAsset.Active" class="form-control">
        <option value="">-- Select --</option>
        <option value="2">Yes</option>
        <option value="1">No</option>
    </select>

    -->


                <input type="checkbox" asp-for="ServerAsset.Active" value="true"/>
                
                

            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="AppRole.Role" class="control-label"></label>
            </div>
            <div class="col-6">
                <select asp-for="ServerAsset.AppsId" class="form-control" asp-items="@Model.AppList">
                    <option value="">-- Select Role --</option>
                </select>
            </div>
        </div>



            <div class="form-group row">
                <div class="col-3 offset-4">
                    <input type="submit" value="Create" class="btn btn-primary form-control" />
                </div>
                <div class="col-3">
                    <a asp-page="/Index" class="btn btn-success form-control">Back to list</a>
                </div>
            </div>
</form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

