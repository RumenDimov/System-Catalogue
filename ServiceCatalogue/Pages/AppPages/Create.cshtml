@page
@model ServiceCatalogue.Pages.AppPages.CreateModel
@{
}

<br />

<h2 class="text-info">Add a server</h2>

<br />

<div class="border container" style="padding: 30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="SystemAsset.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="SystemAsset.Name" class="form-control" />
            </div>
            <span asp-validation-for="SystemAsset.Name" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="SystemAsset.Website"></label>
            </div>
            <div class="col-6">
                <input asp-for="SystemAsset.Website" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="SystemAsset.Wiki"></label>
            </div>
            <div class="col-6">
                <input asp-for="SystemAsset.Wiki" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="SystemAsset.LastDeployed"></label>
            </div>
            <div class="col-6">
                <input asp-for="SystemAsset.LastDeployed" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
           
            <div class="col-4">
                <label asp-for="ServerAsset.ServerName" class="control-label"></label>
            </div>
            <div class="col-6">
                <select asp-for="SystemAsset.ServerAssetsId" class="form-control" asp-items="@Model.ServerNameSL">
                    <option value="">-- Select Server --</option>
                </select>
                </div>
            </div>



            <div class="form-group row">
                <div class="col-3 offset-4">
                    <input type="submit" value="Create" class="btn btn-primary form-control" />
                </div>
                <div class="col-3">
                    <a asp-page="/Index" class="btn btn-success form-control">Back to list</a>
                </div>
            </div>
</form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
